<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>PatchPeek</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/5.5.1/github-markdown-dark.min.css"
    />
  </head>
  <body>
    <div class="header">
      <h1 class="title">ðŸ‘€ PatchPeek</h1>
      <p class="lastUpdated">Last updated: <%= lastUpdateTime %></p>
      <details class="settings">
        <summary class="settingsSummary">
          <p class="settingsTitle" >Settings</p>
        </summary>
        <div class="settingsContent">
          <form method="POST" action="/update-days">
            <label for="daysWindow">Show releases from the last</label>
            <input
              type="number"
              id="daysWindow"
              name="daysWindow"
              min="1"
              value="<%= daysWindow %>"
              required
              class="dayswindow"
              onchange="this.form.submit()"
            />
            days
          </form>
          <hr>
          <form action="/update-token" method="POST" class="updatetoken">
            <label for="githubToken">GitHub Token:</label>
            <input id="githubToken" type="text" name="githubToken" placeholder="github_pat_... / ghp_..." />
          </form>
        </div>
      </details>
    </div>
    <div class="layout">
      <div class="content">
        <% if (errorMessage.length) { %>
          <div class="banner">
            <div class="errorMessage">
              <% errorMessage.forEach(err => { %>
                <p><%= err %></p>
              <% }) %>
            </div>
            <button
              class="dismiss-button"
              onclick="window.location='/'"
              aria-label="Dismiss error message"
            >&times;</button>
          </div>
        <% } %>
        <% if (rateLimited) { %>
          <div class="banner">
            <p>Rate limit exceeded. Either wait or use a GitHub token.</p>
          </div>
        <% } %>

        <% allReleases.forEach(feed => { %>
          <details class="wrapper">
            <summary class="repoMain">
              <img class="avatar" src="https://github.com/<%= feed.repo.split('/')[0] %>.png"/>
              <p class="project"><%= feed.repo %></p>
              <p class="releaseCount <%= feed.hasFlagged ? 'flagged' : '' %>">
                <%= feed.releaseCount %> releases
              </p>
            </summary>
            <div class="releaseDiv">
              <% feed.releases.forEach(release => { %>
                <details open class="release <%= release.flagged ? 'flagged' : '' %>">
                  <summary class="<%= release.flagged ? 'flagged' : '' %>">
                    <a class="releaseName <%= release.flagged ? 'flagged' : '' %>" href="<%= release.html_url %>">
                      <%= release.name || release.tag_name %> 
                      (<%= new Date(release.published_at).toLocaleDateString() %>)
                    </a>
                  </summary>
                  <div class="markdown-body <%= release.flagged ? 'flagged' : '' %>">
                    <%- release.body_html %>
                  </div>
                </details>
              <% }) %>
            </div>
          </details>
        <% }) %>
      </div>
      <div class="sidebar">
        <h2 id="repositories">Repositories</h2>
        <form method="POST" action="/add-repo" class="addrepo">
          <label for="repoSlug">Enter GitHub repository slug:</label>
          <input
            id="repoSlug"
            name="repoSlug"
            type="text"
            placeholder="user/repo"
            required
          />
        </form>
        <hr>
        <ul class="reposlist">
          <% if (repoList.length) { %>
            <% repoList.forEach(repo => { %>
              <li>
                <form method="POST" action="/remove-repo">
                  <code class="repos">
                    <input
                      type="checkbox"
                      name="repoSlug"
                      value="<%= repo %>"
                      class="repocheck"
                      checked
                      onclick="if(confirm('Are you sure you want to remove this repository?')) this.form.submit(); else this.checked = true;"
                    />
                    <p class="repotext"><%= repo %></p>
                  </code>
                  <input type="hidden" name="repoSlug" value="<%= repo %>" />
                </form>
              </li>
            <% }) %>
          <% } else { %>
            <li><em>None yet</em></li>
          <% } %>
        </ul>
      </div>
    </div>
    <div id="loadingOverlay" style="display: none;">  
      <div class="spinner"></div>
    </div>
  </body>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const loadingOverlay = document.getElementById('loadingOverlay');
      const forms = document.querySelectorAll('form');

      forms.forEach(form => {
        form.addEventListener('submit', () => {
          loadingOverlay.style.display = 'flex';
        });
      });
    });
  </script>
</html>
