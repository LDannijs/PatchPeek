<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>PatchPeek</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/5.5.1/github-markdown-dark.min.css"
    />
  </head>
  <body>
    <div class="layout">
      <div class="content">
        <% if (rateLimitHit && isAuthenticated) { %>
        <p class="banner">
          ðŸš¨ GitHub API rate limit exceeded for authenticated requests.
        </p>
        <% } else if (rateLimitHit && !isAuthenticated) { %>
        <p class="banner">
          ðŸš¨ GitHub API rate limit exceeded for unauthenticated requests. Please add a GitHub token to increase your quota.
        </p>
        <% } %>
        <% if (now < lastUpdateTime) { %>
          <div class="banner">
            New content available. <a href="/">Refresh</a>
          </div>
        <% } %>
        <% if (errorMessage) { %>
          <div class="banner">
            <span><%= errorMessage %></span>
            <button
              class="dismiss-button"
              onclick="window.location='/'"
              aria-label="Dismiss error message"
            >&times;</button>
          </div>
        <% } %>

        <% feedsWithReleases.forEach(feed => { %>
          <details class="wrapper">
            <summary class="feedMain">
              <img class="avatar" src="https://github.com/<%= feed.project.split('/')[0] %>.png" alt="<%= feed.project %>" />
              <p class="project"><%= feed.project %></p>
              <p class="releaseCount <%= feed.breakingCount ? 'flagged' : '' %>">
                <%= feed.releaseCount %> releases<%= feed.breakingCount ? ' ðŸš¨' : '' %>
              </p>
            </summary>
            <div class="releaseDiv">
              <% 
                const breaking = feed.releases.filter(r => r.flagged);
                const normal = feed.releases.filter(r => !r.flagged);
                [...breaking, ...normal].forEach(r => { 
              %>
                <details class="release" open>
                  <summary>
                    <%= r.title %> (<%= r.date %>)
                    <% if (r.flagged) { %><span class="flagged">ðŸš¨</span><% } %>
                  </summary>
                  <div class="markdown-body"><%- r.html %></div>
                </details>
              <% }) %>
            </div>
          </details>
        <% }) %>
      </div>
      <div class="sidebar">
        <h1>ðŸ‘€ PatchPeek</h1>

        <form method="POST" action="/update-days">
          <label for="daysWindow">Show releases from the last</label>
          <input
            type="number"
            id="daysWindow"
            name="daysWindow"
            min="1"
            value="<%= daysWindow %>"
            required
            class="dayswindow"
            onchange="this.form.submit()"
          />
          days
        </form>

        <form method="POST" action="/add-feed" class="addfeed">
          <label for="feedSlug">GitHub Repo Slug:</label>
          <input
            id="feedSlug"
            name="feedSlug"
            type="text"
            placeholder="user/repo"
            required
          />
        </form>

        <form action="/update-token" method="POST" class="updatetoken">
          <label for="githubToken">GitHub Token:</label>
          <input id="githubToken" type="text" name="githubToken" placeholder="github_pat_... / ghp_..." />
        </form>
        <p class="lastUpdated">Last updated: <%= new Date(lastUpdateTime).toLocaleString() %></p>

        <h2>Current Feeds</h2>
        <ul class="feedslist">
          <% if (feedsList.length) { %>
            <% feedsList.forEach(feed => { %>
              <li>
                <form method="POST" action="/remove-feed" onchange="this.submit()">
                  <code class="feeds">
                    <input type="checkbox" class="feedcheck" checked />
                    <p class="feedtext"><%= feed %></p>
                  </code>
                  <input type="hidden" name="feedSlug" value="<%= feed %>" />
                </form>
              </li>
            <% }) %>
          <% } else { %>
            <li><em>None yet</em></li>
          <% } %>
        </ul>
      </div>
    </div>
    <div id="loadingOverlay" style="display: none;">  
      <div class="spinner"></div>
    </div>
  </body>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const loadingOverlay = document.getElementById('loadingOverlay');
      const forms = document.querySelectorAll('form');

      forms.forEach(form => {
        form.addEventListener('submit', () => {
          loadingOverlay.style.display = 'flex';
        });
      });
    });
  </script>
</html>
