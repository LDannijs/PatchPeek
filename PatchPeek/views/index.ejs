<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>PatchPeek</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/5.5.1/github-markdown-dark.min.css"
    />
  </head>
  <body>
    <div class="header">
      <h1 class="title">ðŸ‘€ PatchPeek</h1>
    </div>
    <div class="layout">
      <div class="content">
        <% allReleases.forEach(({ repo, releases, releaseCount }) => { %>
          <details class="wrapper">
            <summary class="repoMain">
              <img class="avatar" src="https://github.com/<%= repo.split('/')[0] %>.png"/>
              <p class="project"><%= repo %></p>
              <p class="releaseCount">
                  <%= releaseCount %> releases
                </p>
            </summary>
            <div class="releaseDiv">
              <% releases.forEach(release => { %>
                <details class="release">
                  <summary>
                    <a class="releaseName" href="<%= release.html_url %>"><%= release.name || release.tag_name %> 
                    (<%= new Date(release.published_at).toLocaleDateString() %>)
                    </a>
                  </summary>
                  <div class="markdown-body"><%- release.body_html %></div>
                </details>
              <% }) %>
            </div>
          </details>
        <% }) %>
      </div>
      <div class="sidebar">
        <h2 id="repositories">Repositories</h2>
        <form method="POST" action="/add-repo" class="addrepo">
          <label for="repoSlug">Enter GitHub repository slug:</label>
          <input
            id="repoSlug"
            name="repoSlug"
            type="text"
            placeholder="user/repo"
            required
          />
        </form>
        <hr>
        <ul class="reposlist">
          <% if (allReleases.length) { %>
            <% allReleases.forEach(({ repo }) => { %>
              <li>
                <form method="POST" action="/remove-repo" onchange="this.submit()">
                  <code class="repos">
                    <input type="checkbox" class="repocheck" checked />
                    <p class="repotext"><%= repo %></p>
                  </code>
                  <input type="hidden" name="repoSlug" value="<%= repo %>" />
                </form>
              </li>
            <% }) %>
          <% } else { %>
            <li><em>None yet</em></li>
          <% } %>
        </ul>
      </div>
    </div>
    <div id="loadingOverlay" style="display: none;">  
      <div class="spinner"></div>
    </div>
  </body>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const loadingOverlay = document.getElementById('loadingOverlay');
      const forms = document.querySelectorAll('form');

      forms.forEach(form => {
        form.addEventListener('submit', () => {
          loadingOverlay.style.display = 'flex';
        });
      });
    });
  </script>
</html>
